<title>Search for <%= searches %> | Elgemo</title>
    
    <%- include('include/header.ejs') %> <!-- GETS THE HEADER -->

    <div class="top-content">
        <h3>Search for Movies</h3>
    </div>
    <main id="main">

        <% if (movie.length < 1) { %>
            <p>
                No search results for "<%= searches %>"
            </p>
            <% } %>

            <% for (var i = 0 ; i < movie.length ; i++) { %>
                <div class="movie">
        
                    <a href="/frontpage/<%= movie[i].id %>">
                        <img src="<%= movie[i].poster_path %>" alt="<%= movie[i].title %>"/>
                    </a>
                        <div class="movie-info">
                        <h3><%= movie[i].title %></h3>
                    </div>
                     <div class="overview">
                            <a href="/frontpage/<%= movie[i].id %>">
                                <h3>Overview:</h3>
                                <p>
                                    <%= movie[i].overview %> 
                                </p>
                            </a>
                            
                        <a href="/user/save"><button > save </button></a>
                    </div>
                </div>
        
                <% } %>
    
       </main>

   <script src="js/frontpagejs.js"></script>
</body>
</html>