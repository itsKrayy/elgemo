<title><%= movie.movieName %> | Elgemo</title>

<%- include('include/header.ejs') %> <!-- GETS THE HEADER -->
   <main id="main">

    <div class="main-content">
        <div class="movie-info">
            
            <div class="movie-img">
                <img src="<%= movie.poster_path %>" alt="">
            </div>
            
            <div class="movie.dets">
                <div class="button-container">
                    <a href="/user/save"><button>save</button></a>
                    <a href="<%= movie.homepage %>" target="_blank"><button>more</button></a>
                </div>
                <p><h3>Title: </h3><%= movie.title %></p>
                <p><h3>Movie Description: </h3> <%= movie.overview %></p>
                <p><h3>Tagline: </h3> <%= movie.tagline %></p>
                <p><h3>Popularity: </h3> <%= movie.popularity %></p>
                <p><h3>Vote Count: </h3> <%= movie.vote_count %></p>
                <p><h3>Vote Average: </h3> <%= movie.vote_average %></p>
            </div>

            

        </div>

        <div class="movieiframe">
            <iframe width="100%" height="90%" src="https://drive.google.com/file/d/1ZR_OaD4_uBVtlgJ89gVxnr4hjGSmJU_8/preview" 
            frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen>
            </iframe>
        </div>
        <h2>Watch <%= movie.title %> Trailer</h2>
        <div class="iframe">
            <iframe src="" 
            frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen>
            </iframe>
        </div>

        <h2>Dummy Trailer</h2>
        <div class="iframe">
            <iframe src="https://www.youtube.com/watch?v=d2RxKTKldfI&t=225s" 
            frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen>
            </iframe>
        </div>

    </div>

   </main>
   <script src="/js/frontpagejs.js"></script>
</body>
</html>